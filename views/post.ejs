<div class="container" style="margin-top: 6%">
        <form action='/post' method="POST">
          <h1>News Feed</h1>
          <div class="form-group" hidden>
            <input type="text" name="post[username]" hidden>
          </div>
          <div class="form-group">
              <label for="title">Title</label><br>
              <textarea class="form-control" id="title" name="post[title]" rows="1" cols="1" placeholder="What?"></textarea>
            </div>
          <div class="form-group">
            <label for="body">Post</label>
            <textarea class="form-control" id="body" name="post[body]" rows="7" placeholder="What you are thinking?"></textarea>
          </div>
          <!-- <div class="form-group">
              <label for="tag">Tag Friends</label>
              <textarea class="form-control" id="tag" name="post[tags]" rows="3" placeholder="Notify Friends.."></textarea>
          </div> -->
          <div class="form-group">
              <button type="submit" class="btn btn-primary">Post</button>
          </div>
        </form>
</div>